{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "strict": false,
    "checkJs": false,
    "jsx": "preserve",
    "jsxFactory": "h",
    "noImplicitAny": false,
    "sourceMap": true
  },
  "include": [
    "../../src/shims-vue.d.ts",
    "../../src/shims-tsx.d.ts",
    "./components/**/*.ts",
    "./components/**/*.tsx",
    "./components/**/*.vue",
    "./core/**/*.vue",
    "./core/**/*.ts",
    "./core/**/*.tsx",
    "./index.ts"
  ]
}
