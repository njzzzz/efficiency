{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "strict": false,
    "checkJs": false,
    "jsx": "preserve",
    "jsxFactory": "h",
    "noImplicitAny": false,
    "noEmit": true
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
}
